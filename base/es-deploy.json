{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "creationTimestamp": null,
    "name": "es1",
    "labels": {
      "name": "elasticsearch",
      "org": "$ORG",
      "instance": "es1"
    }
  },
  "spec": {
    "replicas": 1,
    "strategy": {
      "type": "Recreate"
    },
    "selector": {
      "matchLabels": {
        "name": "elasticsearch",
        "org": "$ORG",
        "instance": "es1"
      }
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "name": "elasticsearch",
          "org": "$ORG",
          "instance": "es1"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "ES_JAVA_OPTS",
                "value": "-Xmx512m -Xms512m"
              },
              {
                "name": "cluster.name",
                "value": "Cluster"
              },
              {
                "name": "path.repo",
                "value": "/usr/share/nfs/backup"
              },{
                "name": "path.data",
                "value": "/usr/share/nfs/data"
              },{
                "name": "path.logs",
                "value": "/usr/share/nfs/logs"
              },{
                "name": "http.cors.enabled",
                "value": "true"

              },{
                "name": "http.cors.allow-origin",
                "value": "*"
              }
            ],
            "image": "docker.elastic.co/elasticsearch/elasticsearch:6.3.1",
            "name": "elasticsearch",
            "volumeMounts": [
              {
                "name": "nfs-claim1-$ORG",
                "mountPath": "/usr/share/nfs"
              }
            ],
            "ports": [
              {
                "containerPort": 9200
              }
            ],
            "resources": {
              "limits": {
                "cpu": "3000m",
                "memory": "4000Mi"
              },
              "requests": {
                "cpu": "400m",
                "memory": "1000Mi"
              }
            }
          }
        ],
        "volumes": [
          {
            "name": "nfs-claim1-$ORG",
            "persistentVolumeClaim": {
              "claimName": "nfs-claim1-$ORG"
            }
          }
        ],
        "restartPolicy": "Always"
      }
    }
  }
}
